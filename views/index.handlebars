<!DOCTYPE HTML>
<html>
<head>
  <meta charset='utf8'>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
  <title>Countries with Universal Health Care</title>
</head>
<body>
  <h1>Countries with Unviversal Health Care</h1>
  <table>
    <thead>
      <tr>
        <th>Country</th>
        <th>Flag</th>
        <th>Capital</th>
        <th>Population</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each countries}}
    <tr>
      <td>{{name}}</td>
      <td><img src={{flag}} height='150px' width='200px'></td>
      <td>{{capital}}</td>
      <td>{{population}}</td>
      <td><a href="countries/:id/edit">Edit</a></td>
      <td><form action='/countries/{{id}}/?_method=delete' method='POST'><button>Delete</button></form></td>
    </tr>
    {{/each}}
  </table>
  <a href="/countries/new">Add a Country</a>
</body>
</html>
